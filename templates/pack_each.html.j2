  <script>

    var addQuestionEditor = document.getElementById('quill');
    var addQuill = new Quill(addQuestionEditor, {
      theme: 'snow',
      modules: {
        toolbar: [
          [{ 'size': ['small', false, 'large', 'huge'] }],  // custom dropdown
          [{ 'font': [] }],

          ['bold', 'italic', 'underline', 'strike'],        // toggled buttons
          ['blockquote', 'code-block'],

          [{ 'list': 'ordered' }, { 'list': 'bullet' }],
          [{ 'script': 'sub' }, { 'script': 'super' }],      // superscript/subscript
          [{ 'indent': '-1' }, { 'indent': '+1' }],          // outdent/indent

          [{ 'color': [] }, { 'background': [] }],          // dropdown with defaults from theme
          [{ 'align': [] }],

          ['clean'],                                         // remove formatting button
          ['link', 'image', 'video'],                        // link and image, video
        ],
      },
      placeholder: 'Ketik soal di sini..',
    });

    $('.quill-editor').each(function () {
      // Extract the question ID from the data attribute
      var questionId = $(this).data('question-id');

      // Get the initial content from the server-rendered HTML
      var quillText = $(this).text().trim();
      var quillHTML = $(this).html().trim();

      // Initialize a Quill instance for each question's editor
      var quillInstance = new Quill(this, {
        theme: 'snow',
        modules: {
          toolbar: [
            [{ 'size': ['small', false, 'large', 'huge'] }],  // custom dropdown
            [{ 'font': [] }],

            ['bold', 'italic', 'underline', 'strike'],        // toggled buttons
            ['blockquote', 'code-block'],

            [{ 'list': 'ordered' }, { 'list': 'bullet' }],
            [{ 'script': 'sub' }, { 'script': 'super' }],      // superscript/subscript
            [{ 'indent': '-1' }, { 'indent': '+1' }],          // outdent/indent

            [{ 'color': [] }, { 'background': [] }],          // dropdown with defaults from theme
            [{ 'align': [] }],

            ['clean'],                                         // remove formatting button
            ['link', 'image', 'video'],                        // link and image, video
          ],
        },
        placeholder: 'Ketik soal di sini..',
      });

      quillInstance.clipboard.dangerouslyPasteHTML(quillHTML);

      // Listen for changes in the Quill editor and update hidden fields
      quillInstance.on('text-change', function () {
        // Get the latest content from the Quill editor
        var updatedQuillText = quillInstance.getText().trim();
        var updatedQuillHTML = quillInstance.root.innerHTML.trim();

        // Update the hidden fields with the latest content
        $("#hiddenTextArea-" + questionId).val(updatedQuillText);
        $("#hiddenHTMLArea-" + questionId).val(updatedQuillHTML);
      });

      // Handle form submission for each question form
      $('#add-question-' + questionId).on('submit', function (event) {
        // Retrieve the latest content from the Quill editor
        var latestQuillText = quillInstance.getText().trim();
        var latestQuillHTML = quillInstance.root.innerHTML.trim();

        // Update hidden fields with the latest content
        $("#hiddenTextArea-" + questionId).val(latestQuillText);
        $("#hiddenHTMLArea-" + questionId).val(latestQuillHTML);

        // Check if the Quill editor is empty and prevent form submission if needed
        if (latestQuillText === "") {
          window.alert('Harus ada teks pada kolom pertanyaan');
          event.preventDefault(); // Prevent form submission if the Quill editor is empty
        }

        // You can add additional validation or processing logic here

        // Continue with form submission if needed
      });
    });

    $('#addQuestion').on('submit', function () {
      var quillText = $("#quill").text().trim();
      var quillHTML = $("#quill").html().trim();

      if (quillText !== "") {
        $("#hiddenTextArea").val(quillText);
        $("#hiddenHTMLArea").val(quillHTML);
      } else {
        window.alert('Harus ada teks pada kolom pertanyaan');
        return false;
      }

      return true;
    });



    function add_ans() {
      let list = document.getElementById('ans-list');

      list.insertAdjacentHTML('beforeend', `
        <div class="col-12 row g-3">
          <div class="col-10">
            <div class="form-floating">
              <input type="text" class="form-control" id="floatingName" name="jawaban"
                placeholder="Jawaban" required>
              <label for="floatingName">Jawaban <span style="color: red">*</span></label>
            </div>
          </div>
          <div class="col-2">
            <div class="form-check">
              <input type="hidden" name="benar" value="0">
              <input class="form-check-input" name="benar" value="1" type="checkbox" id="gridCheck1">
              <label class="form-check-label" for="gridCheck1">
                Benar
              </label>
            </div>
          </div>
        </div>
      `)

      let del_btn = document.getElementById('del-btn');
      del_btn.classList.remove('d-none');
    }

    function add_ans_on_q(q_id) {
      let list = document.getElementById(`ans-list-${q_id}`);

      list.insertAdjacentHTML('beforeend', `
        <div class="col-12 row g-3">
          <div class="col-10">
            <div class="form-floating">
              <input type="text" class="form-control" id="floatingName" name="jawaban"
                placeholder="Jawaban" required>
              <label for="floatingName">Jawaban <span style="color: red">*</span></label>
            </div>
          </div>
          <div class="col-2">
            <div class="form-check">
              <input type="hidden" name="benar" value="0">
              <input class="form-check-input" name="benar" value="1" type="checkbox" id="gridCheck1">
              <label class="form-check-label" for="gridCheck1">
                Benar
              </label>
            </div>
          </div>
        </div>
      `)

      let del_btn = document.getElementById(`del-btn-${q_id}`);
      del_btn.classList.remove('d-none');
    }

    function del_ans() {
      let list = document.getElementById('ans-list');
      let del_btn = document.getElementById('del-btn');

      list.removeChild(list.lastElementChild);

      if (list.children.length === 1) {
        del_btn.classList.add('d-none');
      }
    }

    function del_ans_on_q(q_id) {
      let list = document.getElementById(`ans-list-${q_id}`);
      let del_btn = document.getElementById(`del-btn-${q_id}`);

      list.removeChild(list.lastElementChild);

      if (list.children.length === 1) {
        del_btn.classList.add('d-none');
      }
    }
  </script>

