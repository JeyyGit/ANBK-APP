                      <a href="#" class="card-body" data-bs-toggle="modal" data-bs-target="#basicModal{{ q.id }}">
                        <h5 class="card-title">{{ q.order }}. {{ q.question_text|truncate(255) }}</h5>
                        <h6 class="card-subtitle mb-2 text-muted">Klik untuk sunting soal</h6>
                        <span>Jawaban:</span>
                        <ol type="A">
                          {% for a in answers %}
                          {% if a.question_id == q.id %}
                          <li>
                            {{ a.answer_text|truncate(30) }}
                            {% if a.is_correct %}
                            <i class="bi bi-check-lg"></i>
                            {% endif %}
                          </li>
                          {% endif %}
                          {% endfor %}
                        </ol>
                      </a>
                    </div>
                  </div>
                  <div class="modal fade" id="basicModal{{ q.id }}" tabindex="-1">
                    <div class="modal-dialog modal-lg modal-dialog-scrollable">
                      <form id="add-question-{{ q.id }}"
                        action="/proktor/modul/{{ module.id }}/paket/{{ pack.id }}/soal/{{ q.id }}/edit" method="post"
                        class="modal-content">
                        <div class="modal-header">
                          <h5 class="modal-title">Edit Soal</h5>
                          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                          <div class="row g-3">
                            <div class="col-12">
                              <label>Pertanyaan <span style="color: red">*</span></label>
                              <div class="quill-container">
                                <div class="quill-editor" data-question-id="{{ q.id }}">{{ q.question_html|safe }}</div>
                              </div>
                              <textarea name="pertanyaan" class="d-none" id="hiddenTextArea-{{ q.id }}"></textarea>
                              <textarea name="pertanyaan_html" class="d-none" id="hiddenHTMLArea-{{ q.id }}"></textarea>
                            </div>
                            <div id="ans-list-{{ q.id }}" class="col-12 row g-3"> <!-- list -->
                              {% set count = namespace(value=0) %}
                              {% for a in answers %}
                              {% if a.question_id == q.id %}
                              {% set count.value = count.value + 1 %}
                              <div class="col-12 row g-3">
                                <div class="col-10">
                                  <div class="form-floating">
                                    <input type="text" class="form-control" id="floatingName" name="jawaban"
                                      placeholder="Jawaban" value="{{ a.answer_text }}" required>
                                    <label for="floatingName">Jawaban <span style="color: red">*</span></label>
                                  </div>
                                </div>
                                <div class="col-2">
                                  <div class="form-check">
                                    <input type="hidden" name="benar" value="0">
                                    <input class="form-check-input" name="benar" value="1" type="checkbox"
                                      id="gridCheck1" {{ 'checked' if a.is_correct else '' }}>
                                    <label class="form-check-label" for="gridCheck1">
                                      Benar
                                    </label>
                                  </div>
                                </div>
                              </div>
                              {% endif %}
                              {% endfor %}
                            </div>
                            <div class="col">
                              <button type="button" class="btn btn-primary" onclick="add_ans_on_q({{ q.id }})"><i
                                  class="bi bi-plus-lg"></i></button>
                              <button id="del-btn-{{ q.id }}" type="button"
                                class="btn btn-danger{{ ' d-none' if count.value == 1 else '' }}"
                                onclick="del_ans_on_q({{ q.id }})"><i class="bi bi-dash-lg"></i></button> <!-- Fix -->
                            </div>
                          </div>
                        </div>
                        <div class="modal-footer">
                          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Tutup</button>
                          <button type="submit" class="btn btn-warning">Edit</button>
                        </div>
                      </form>

                    </div>
                  </div><!-- End Basic Modal-->
                  {% endfor %}

                </div>
              </section>
            </div>

          </div>
        </div>
      </div>
      </div>
